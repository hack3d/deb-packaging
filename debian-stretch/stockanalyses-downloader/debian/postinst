#!/bin/sh
# postinst script for stockanalyses-downloader
#
# see: dh_installdeb(1)

set -e

case "$1" in
	configure)
          
	# copy default config if it doesn't exist
        if [ ! -f "/opt/stockanalyses-downloader/lib/python3.5/site-packages/downloader/config" ]
	then
            if [ -e "/opt/stockanalyses-downloader/lib/python3.5/site-packages/downloader/config.default" ]; then
                cp /opt/stockanalyses-downloader/lib/python3.5/site-packages/downloader/config.default /opt/stockanalyses-downloader/lib/python3.5/site-packages/downloader/config
            fi
        fi
            
	;;
	
	abort-upgrade|abort-remove|abort-deconfigure)
		exit 0
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;

esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#


exit 0