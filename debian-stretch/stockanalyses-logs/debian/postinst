#!/bin/sh
# postinst script for stockanalyses-logs
#
# see: dh_installdeb(1)

set -e

case "$1" in
	configure)
          
	# create datastore
	mkdir /opt/stockanalyses-logs
	chown -R $USER:$USER /opt/stockanalyses-logs
            
	;;
	
	abort-upgrade|abort-remove|abort-deconfigure)
		exit 0
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;

esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#


exit 0